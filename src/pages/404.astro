---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist">
  <section class="min-h-[60vh] flex items-center justify-center px-4 py-16">
    <div class="text-center max-w-md">
      {/* 404 illustration */}
      <div class="mb-8">
        <div class="relative inline-block">
          <div class="text-[120px] md:text-[180px] font-bold text-ctp-surface1 leading-none select-none">
            404
          </div>
          <div class="absolute inset-0 flex items-center justify-center">
            <svg
              class="w-24 h-24 md:w-32 md:h-32 text-ctp-mauve"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"
              />
            </svg>
          </div>
        </div>
      </div>

      {/* Error message */}
      <h1 class="text-2xl md:text-3xl font-bold text-ctp-text mb-4">
        Page Not Found
      </h1>
      <p class="text-ctp-subtext1 mb-8">
        Oops! The recipe you're looking for seems to have wandered off.
        It might have been moved, deleted, or never existed.
      </p>

      {/* Actions */}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-ctp-mauve text-ctp-base font-medium hover:bg-ctp-mauve/90 transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            />
          </svg>
          Go Home
        </a>
        <a
          href="/tags"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-ctp-surface0 text-ctp-text font-medium hover:bg-ctp-surface1 border border-ctp-surface1 transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
            />
          </svg>
          Browse Tags
        </a>
      </div>

      {/* Search suggestion */}
      <div class="mt-12 pt-8 border-t border-ctp-surface1">
        <p class="text-sm text-ctp-subtext0 mb-4">
          Looking for something specific? Try searching on the home page.
        </p>
        <a
          href="/#recipe-search"
          class="text-ctp-mauve hover:underline text-sm font-medium"
        >
          Go to search
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
