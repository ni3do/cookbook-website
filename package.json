{
  "name": "cookbook",
  "version": "1.0.0",
  "description": "The Kyburz Table - A modern recipe website",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo 'No tests configured yet' && exit 0",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.astro": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "recipes",
    "cookbook",
    "astro"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@astrojs/node": "^9.5.2",
    "@astrojs/tailwind": "^6.0.2",
    "@catppuccin/palette": "^1.7.1",
    "astro": "^5.17.1",
    "tailwindcss": "^3.4.19"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.0",
    "prettier-plugin-astro": "^0.14.0",
    "typescript": "^5.5.0"
  }
}
